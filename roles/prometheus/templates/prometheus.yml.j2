# Sample config for Prometheus.

global:
  scrape_interval:     15s # Set the scrape interval to every 15 seconds. Default is every 1 minute.
  evaluation_interval: 15s # Evaluate rules every 15 seconds. The default is every 1 minute.

scrape_configs:
  # The job name is added as a label `job=<job_name>` to any timeseries scraped from this config.
  - job_name: 'prometheus'

    # Override the global default and scrape targets from this job every 5 seconds.
    scrape_interval: 5s
    scrape_timeout: 5s

    metrics_path: '/prometheus/metrics'
    # metrics_path defaults to '/metrics'
    # scheme defaults to 'http'.

    static_configs:
      - targets: ['localhost:9090']

  - job_name: linux
    static_configs:
      - targets: [{% for vm in groups['all'] %}'{{ vm }}:9100'{% if not loop.last %}, {% endif %}{% endfor %}]
    scrape_interval: 5s
    scrape_timeout: 5s

    # metrics_path defaults to '/metrics'
    # scheme defaults to 'http'.i


  - job_name: mysql
    static_configs:
      - targets: ['db-1:9104','db-2:9104']
    scrape_interval: 5s
    scrape_timeout: 5s

  - job_name: bind9
    static_configs:
      - targets: ['ns-1:9119','ns-2:9119','localhost:9119']
    scrape_interval: 5s
    scrape_timeout: 5s

  - job_name: nginx
    static_configs:
      - targets: ['www-1:9113','www-2:9113']
    scrape_interval: 5s
    scrape_timeout: 5s

  - job_name: loki
    static_configs:
      - targets: ['loki:3100']
    scrape_interval: 5s
    scrape_timeout: 5s

  - job_name: promtail
    static_configs:
      - targets: [{% for vm in groups['all'] %}'{{ vm }}:9080'{% if not loop.last %}, {% endif %}{% endfor %}]
    scrape_interval: 5s
    scrape_timeout: 5s

  - job_name: backup
    static_configs:
      - targets: [backup.{{ mydomain }}:9111]
    scrape_interval: 5s
    scrape_timeout: 5s

  - job_name: haproxy
    static_configs:
      - targets: ['lb-1:{{ prometheus_exporters['haproxy']['port'] }}','lb-2:{{ prometheus_exporters['haproxy']['port'] }}'] 
    scrape_interval: 5s
    scrape_timeout: 5s

  - job_name: keepalived
    static_configs:
      - targets: [{% for vm in groups['keepalived'] %}'{{ vm }}:9165'{% if not loop.last %}, {% endif %}{% endfor %}]
    scrape_interval: 5s
    scrape_timeout: 5s
