acl corpnets {
    {% for n in corp_nets %}
    {{ n }};
    {% endfor %}
};


options {

	allow-query { corpnets; };
        directory "/var/cache/bind";

        forwarders {
	{% for x in dns %}
	{{ x }};
	{% endfor %}		
        };

	forward only;
        dnssec-validation no;

};

statistics-channels {
  inet localhost port 8053 allow { localhost; };
};

key "{{ update_key_name }}" {
        algorithm {{ update_key_algorithm }};
        secret "{{ dns_update_key }}";
};

key "{{ transfer_key_name }}" {
        algorithm {{ tranfer_key_algorithm }};
        secret "{{ dns_transfer_key }}";
};
